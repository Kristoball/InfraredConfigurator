@using InfraredConfigurator.Entities
@model IEnumerable<Server>

@{
    ViewData["Title"] = "Server configuration";
}

<div class="text-center shadow-lg p-3 mb-5 bg-body-tertiary rounded">
    <h1 class="display-4">Server config</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ip address</th>
                <th>
                    <a asp-action="Edit" class="btn btn-success">Create new</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var server in Model)
            {
                <tr>
                    <td>@server.Id</td>
                    <td>@server.Name</td>
                    <td>@server.IpAddress</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info me-2" asp-route-id="@server.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@server.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>